#include <stdio.h>
#include <stdlib.h>
#define MAXN (8 + 2)

int N;
int arr[MAXN];
int per[MAXN];
int chk[MAXN];
int max;
void solve(int depth)
{
    if (depth == N)
    {
        int sum = 0;

        for (int i = 0; i < N - 1; i++)
            sum += abs(arr[per[i]] - arr[per[i + 1]]);
        
        if (max < sum) max = sum;
    }

    for (int idx = 0; idx < N; idx++)
    {
        if (chk[idx] == 1) continue;

        chk[idx] = 1;
        per[depth] = idx;
        solve(depth + 1);            
        chk[idx] = 0;
    }
}
int main(void)
{
    scanf("%d", &N);
    for (int i = 0; i < N; i++)
        scanf("%d", &arr[i]);

    solve(0);
    printf("%d", max);

    return 0;
}
