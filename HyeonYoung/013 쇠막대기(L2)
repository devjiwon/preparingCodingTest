#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>

// 파라미터로 주어지는 문자열은 const로 주어집니다. 변경하려면 문자열을 복사해서 사용하세요.
int solution(const char* arrangement) {
    int answer = 0;
    int open = 0;
    
    int i = 0;
    while(arrangement[i] != '\0')
    {
        if(arrangement[i] == '(')
            open++;
        else
        {
            open--;
            
            if(arrangement[i - 1] == '(')
                answer += open;
            else
                answer += 1;
        }
        i++;
    }
    
    return answer;
}
