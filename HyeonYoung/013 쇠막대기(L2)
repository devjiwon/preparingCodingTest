#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>

// 파라미터로 주어지는 문자열은 const로 주어집니다. 변경하려면 문자열을 복사해서 사용하세요.
int solution(const char* arrangement) {
    int answer = 0;
    int open = 0;
    
    int i = 0;
    while(arrangement[i] != '\0')
    {
        if(arrangement[i] == '(')
            open++; // 스택포인터로서 열린 괄호를 만나면 증가
        else // 실제 막대기의 갯수에 영향을 미치는 부분(answer)은 닫힌 괄호를 만날 때임
        {
            open--; // 닫힌 괄호를 만나면 감소
            
            if(arrangement[i - 1] == '(') // 닫힌 괄호가 한 쌍(= 레이저)을 이루는 경우일 때
                answer += open; // 기존 누적 값에 현재 스택에 쌓인 갯수를 더함
            else
                answer += 1; // +1의 의미 -> 막대기의 끝 부분 추가
        }
        i++;
    }
    
    return answer;
}
