#include <iostream>
#include <vector>
#include <cstdlib> //abs위해 필요
#include <algorithm>

using namespace std;

int n;
vector<int> arr;
bool check[8];
vector<int> v;
vector<int> result;

void sum(){ //결과값 저장
  int sum=0;
  for(int i=0;i<v.size()-1;i++){
    sum+=abs(v[i]-v[i+1]);
  }
  result.push_back(sum);

}

void DFS(int cnt){
  if(cnt==n){
    sum();
    return;
  }

  for(int i=0;i<n;i++){
    if(check[i]==true) continue;
    check[i]=true;
    v.push_back(arr[i]);
    DFS(cnt+1);
    v.pop_back();
    check[i]=false;
  }
}

int main(){

  cin>>n;
  int x;
  for(int i=0;i<n;i++){
    cin>>x;
    arr.push_back(x);
  }

  DFS(0);
  cout << * max_element(result.begin(),result.end());
}
